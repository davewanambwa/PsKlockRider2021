<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    android:background="@drawable/gradient"
    tools:context=".MyLogin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logonamewhitewords__ek1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:alpha="0.8"
        android:background="@drawable/brectangle_3_shape"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textAlignment="center"
            android:text="WELCOME"/>


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textAlignment="center"
            android:text="Sign In Below"/>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:endIconCheckable="true"
            app:endIconMode="clear_text"
            app:endIconTint="@color/colorPrimaryDark"
            android:hint="FULL PHONE NUMBER">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/semail"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:endIconCheckable="true"
            app:endIconMode="clear_text"
            app:endIconTint="@color/colorPrimaryDark"
            android:hint="Password">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/spassword"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center|top"
            android:padding="10dp"
            >
            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:text="Sign In"
                android:layout_height="wrap_content"
                android:background="@drawable/betterbutton"
                android:paddingRight="10dp"
                android:id="@+id/dbtnsignup"
                android:layout_weight="1"/>
            <View
                android:layout_width="5dp"
                android:layout_height="50dp"
                />


            <View
                android:layout_width="5dp"
                android:layout_height="50dp"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:text="Cancel"
                android:id="@+id/dbtncancel"
                android:background="@drawable/betterbutton"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:text="."
        android:layout_height="wrap_content"
        android:id="@+id/dresponse"/>

</LinearLayout>